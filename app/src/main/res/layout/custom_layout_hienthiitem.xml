<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="@dimen/size5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shadow_border"
    android:layout_margin="@dimen/size10dp"
    >
    <ImageView

        android:id="@+id/imv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:foreground="@drawable/radius_border"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtFan"
        android:layout_marginTop="@dimen/size10dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtFan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imv"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintBottom_toTopOf="@id/txtGroup"
        android:layout_marginRight="@dimen/size10dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtFan"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintBottom_toTopOf="@id/txtGroup"
        android:layout_marginLeft="@dimen/size10dp"
        android:textStyle="italic"
        />
    <TextView
        android:id="@+id/txtGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imv"
        app:layout_constraintTop_toBottomOf="@id/txtFan"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>